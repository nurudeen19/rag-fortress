# Email Configuration Template for RAG Fortress

# ============================================================================
# SMTP Configuration (Required for email functionality)
# ============================================================================

# SMTP Server Address
# Examples:
#   Gmail: smtp.gmail.com
#   SendGrid: smtp.sendgrid.net
#   AWS SES: email-smtp.us-east-1.amazonaws.com
#   Custom: your-smtp-server.com
SMTP_SERVER=smtp.gmail.com

# SMTP Port
# Common ports:
#   587 = STARTTLS (TLS)
#   465 = SMTPS (SSL)
#   25 = Plain SMTP (not recommended)
SMTP_PORT=587

# SMTP Username (usually email address for Gmail)
# Leave empty for anonymous SMTP
SMTP_USERNAME=your-email@gmail.com

# SMTP Password (or app-specific password for Gmail)
# For Gmail: Generate at https://myaccount.google.com/apppasswords
SMTP_PASSWORD=your-app-password-here

# Email address to send from
# Should match SMTP account for best deliverability
SMTP_FROM_EMAIL=your-email@gmail.com

# Display name for sent emails
SMTP_FROM_NAME=RAG Fortress

# Use STARTTLS (port 587)
# Set to true for TLS encryption
SMTP_USE_TLS=true

# Use SSL/TLS on connection (port 465)
# Note: Cannot use both SMTP_USE_TLS and SMTP_USE_SSL
SMTP_USE_SSL=false

# ============================================================================
# Email Token Expiry Times
# ============================================================================

# Account verification email link expiry (in minutes)
# Default: 1440 = 24 hours
EMAIL_VERIFICATION_TOKEN_EXPIRE_MINUTES=1440

# Password reset email link expiry (in minutes)
# Default: 60 = 1 hour (shorter for security)
PASSWORD_RESET_TOKEN_EXPIRE_MINUTES=60

# User invitation link expiry (in days)
# Default: 7 = 1 week
INVITE_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# Frontend URLs (for email links)
# ============================================================================

# Base frontend URL
FRONTEND_URL=http://localhost:5173

# Account verification page URL
# Token will be appended: {URL}?token=xxx
EMAIL_VERIFICATION_URL=http://localhost:5173/verify-email

# Password reset page URL
# Token will be appended: {URL}?token=xxx
PASSWORD_RESET_URL=http://localhost:5173/reset-password

# User invitation acceptance page URL
# Token will be appended: {URL}?token=xxx
INVITE_URL=http://localhost:5173/accept-invite

# ============================================================================
# SMTP Provider Setup Examples
# ============================================================================

# Gmail (Free)
# 1. Enable 2-step verification
# 2. Generate app password: https://myaccount.google.com/apppasswords
# 3. Use the 16-character password below
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=xxxx xxxx xxxx xxxx
# SMTP_USE_TLS=true
# SMTP_USE_SSL=false

# SendGrid
# SMTP_SERVER=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USERNAME=apikey
# SMTP_PASSWORD=SG.your-api-key-here
# SMTP_USE_TLS=true
# SMTP_USE_SSL=false

# AWS SES
# SMTP_SERVER=email-smtp.region.amazonaws.com
# SMTP_PORT=587
# SMTP_USERNAME=your-iam-smtp-user
# SMTP_PASSWORD=your-iam-smtp-password
# SMTP_USE_TLS=true
# SMTP_USE_SSL=false

# Outlook/Microsoft
# SMTP_SERVER=smtp-mail.outlook.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@outlook.com
# SMTP_PASSWORD=your-password
# SMTP_USE_TLS=true
# SMTP_USE_SSL=false

